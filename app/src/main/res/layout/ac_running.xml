<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"

    tools:activity="com.hut.cwp.runner.activitys.homepage.RuningActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 用来做fragment的容器  -->
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppBaseTheme"
        app:popupTheme="@style/AppBaseTheme">

    </android.support.v7.widget.Toolbar>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbtn_state_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:src="@mipmap/logo"
        android:layout_marginBottom="@dimen/y100"
        app:borderWidth="0dp"
        android:layout_marginLeft="@dimen/x20"
        app:backgroundTint="@color/colorApp"
        app:rippleColor="@color/colorPrimaryDark"
        app:elevation="8dp"
        app:pressedTranslationZ="16dp"
        />


    <RelativeLayout
        android:id="@+id/layout_contor"
        android:visibility="gone"
        android:layout_width="@dimen/x480"
        android:layout_height="@dimen/y200"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="@dimen/y200"
        >
        <Button
            android:id="@+id/btn_pause"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:layout_margin="@dimen/x20"
            android:background="@drawable/shape_btn_start"
            android:layout_alignParentLeft="true"
            android:text="@string/pause" />


        <Button
            android:id="@+id/btn_finish"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:background="@drawable/shape_btn_start"
            android:layout_margin="@dimen/x20"
            android:text="@string/finish" />


    </RelativeLayout>


</FrameLayout>
