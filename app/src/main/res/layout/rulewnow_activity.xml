<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activitys.BodyKeep.NewbodyData">

    <include layout="@layout/include_toolbar" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">


        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginBottom="23.0dip"
            android:layout_marginTop="27.0dip"
            android:background="@drawable/register_info_line"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxHeight="17.0sp"
            android:text="目前体重(kg)"
            android:textColor="#cc222222"
            android:textSize="15.0sp"/>

        <TextView
            android:id="@+id/tv_register_info_weight_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.0dip"
            android:includeFontPadding="false"
            android:maxHeight="24.0sp"
            android:text="55"
            android:textColor="#cc222222"
            android:textSize="24.0sp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp">

            <com.zkk.view.rulerview.RulerView
                android:id="@+id/ruler_weight"
                android:layout_width="fill_parent"
                android:layout_height="58.0dip"
                android:layout_marginTop="24.0dip"
                app:alphaEnable="true"
                app:lineColor="@color/gray_dark"
                app:textColor="@color/black"
                />

            <ImageView
                android:layout_width="14.0dip"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/user_info_ruler_weight"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/save_body"
                android:layout_width="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_height="wrap_content"
                android:text="保存"/>

            <Button
                android:id="@+id/de_body"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="取消"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
